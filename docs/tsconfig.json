{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      // для внутреннего использования
      "#found-stories": ["./.tmp/entries.ts"],
      "#components/*": ["./src/internal/main/components/*"],
      "#valid-stories": ["./src/internal/valid-stories.ts"],
      "#utils": ["./src/internal/utils.ts"],

      // для конкретной документации
      "@sima-land/ui-nucleons/*": ["../src/*"],
      "#docs-utils": ["./src/docs-utils.tsx"]
    }
  },
  "include": ["src", "docs", "rspack.config.ts"],
  "exclude": ["node_modules"]
}
