{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      // для внутреннего использования
      "#found-stories": ["./.generated/entries.ts"],
      "#components/*": ["./src/internal/showcase/components/*"],
      "#valid-stories": ["./src/internal/valid-stories.ts"],
      "#utils": ["./src/internal/utils.ts"],

      // для конкретной документации
      "@sima-land/ui-nucleons/*": ["../src/*"],
      "#docs-utils": ["./src/docs-utils.tsx"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
