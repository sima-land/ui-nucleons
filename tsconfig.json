{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./build/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*", "./.storybook/utils.ts"],
  "exclude": ["build", "node_modules"]
}
