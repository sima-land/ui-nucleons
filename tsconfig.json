{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./build/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.scss$"
        }
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./.storybook/utils.ts",
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
